{
  "name": "vscode-bait",
  "displayName": "bait",
  "description": "Provides rich language support for the bait programming language.",
  "version": "0.1.0",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/tiabeast/vscode-bait"
  },
  "publisher": "tiabeast",
  "engines": {
    "vscode": "^1.56.0"
  },
  "categories": [
    "Programming Languages"
  ],
  "activationEvents": [
    "onLanguage:bait"
  ],
	"main": "./out/extension.js",
  "contributes": {
    "languages": [
      {
        "id": "bait",
        "extensions": [
          ".bait"
        ],
        "configuration": "./language-configuration.json"
      }
    ],
    "grammars": [
      {
        "language": "bait",
        "scopeName": "source.bait",
        "path": "./syntaxes/bait.tmLanguage.json"
      }
    ]
  },
  "scripts": {
    "compile": "tsc -p ./",
		"lint": "eslint .",
		"test": "vscode-tmgrammar-test -s source.bait -g syntaxes/bait.tmLanguage.json -t \"syntaxes/tests/*.bait\"",
		"package": "vsce package",
		"install-dev-ext": "npm run test && vsce package -o ./out/vscode-bait-dev.vsix && code --install-extension ./out/vscode-bait-dev.vsix --force",
		"vscode:prepublish": "npm run compile",
		"postinstall-dev-ext": "echo \"Please reload the window (run '>reload window' from command palette)\""
  },
  "devDependencies": {
		"@types/node": "^14.18.12",
    "@types/vscode": "~1.56.0",
		"@typescript-eslint/eslint-plugin": "^5.17.0",
		"@typescript-eslint/parser": "^5.17.0",
		"eslint": "^8.12.0",
		"typescript": "~4.6.3",
    "vsce": "^2.7.0",
    "vscode-tmgrammar-test": "~0.0.11"
  }
}
