{
	"name": "vscode-bait",
	"displayName": "bait",
	"description": "Provides rich language support for the bait programming language.",
	"version": "0.2.1-dev",
	"license": "MIT",
	"repository": {
		"type": "git",
		"url": "https://github.com/tiabeast/vscode-bait"
	},
	"publisher": "tiabeast",
	"engines": {
		"vscode": "^1.56.0"
	},
	"categories": [
		"Programming Languages"
	],
	"activationEvents": [
		"onLanguage:bait"
	],
	"main": "./out/src/extension.js",
	"contributes": {
		"languages": [
			{
				"id": "bait",
				"extensions": [
					".bait"
				],
				"configuration": "./out/language-configuration.json"
			}
		],
		"grammars": [
			{
				"language": "bait",
				"scopeName": "source.bait",
				"path": "./out/bait.tmGrammar.json"
			}
		]
	},
	"scripts": {
		"compile": "tsc -p ./",
		"lint": "eslint .",
		"test": "vscode-tmgrammar-test -s source.bait -g ./out/bait.tmGrammar.json -t \"syntaxes/tests/*.bait\"",
		"install-dev-ext": "npm run test && vsce package -o out/vscode-bait-dev.vsix && code --install-extension out/vscode-bait-dev.vsix --force",
		"package": "vsce package",
		"convert-yaml": "ts-node ./scripts/yaml2json.ts",
		"pretest": "npm run convert-yaml",
		"postinstall-dev-ext": "echo \"Please reload the window (run '>reload window' from command palette)\"",
		"vscode:prepublish": "npm run compile && npm run convert-yaml"
	},
	"devDependencies": {
		"@types/js-yaml": "^4.0.5",
		"@types/node": "^14.18.12",
		"@types/vscode": "~1.56.0",
		"@typescript-eslint/eslint-plugin": "^5.17.0",
		"@typescript-eslint/parser": "^5.17.0",
		"eslint": "^8.12.0",
		"js-yaml": "^4.1.0",
		"ts-node": "^10.7.0",
		"typescript": "~4.6.3",
		"vsce": "^2.7.0",
		"vscode-tmgrammar-test": "~0.0.11"
	}
}
