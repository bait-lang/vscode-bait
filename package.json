{
	"name": "vscode-bait",
	"displayName": "bait",
	"description": "Rich language support for the Bait Programming Language.",
	"icon": "images/bait-logo.png",
	"version": "0.7.1-dev",
	"license": "MIT",
	"publisher": "bait-lang",
	"repository": {
		"type": "git",
		"url": "https://github.com/bait-lang/vscode-bait"
	},
	"categories": [
		"Programming Languages",
		"Language Packs"
	],
	"keywords": [
		"Bait"
	],
	"main": "./out/extension.js",
	"activationEvents": [],
	"contributes": {
		"languages": [
			{
				"id": "bait",
				"extensions": [
					".bt"
				],
				"configuration": "./out/language-configuration.json"
			}
		],
		"grammars": [
			{
				"language": "bait",
				"scopeName": "source.bait",
				"path": "./out/bait.json"
			}
		]
	},
	"scripts": {
		"compile": "bait --library -o out/extension.js src",
		"test": "bun run convert && bunx textmate-grammar-test -g ./out/bait.json \"syntaxes/tests/*.bt\"",
		"install-dev-ext": "bun run test && vsce package -o out/vscode-bait-dev.vsix && code --install-extension out/vscode-bait-dev.vsix --force",
		"package": "bunx vsce package",
    "package:dev": "bunx vsce package -o ./vscode-bait-dev.vsix",
    "install:dev": "bun run package:dev && code --install-extension ./vscode-bait-dev.vsix --force",
		"convert": "bun run ./scripts/convert_yaml.ts",
		"vscode:prepublish": "bun run compile && bun run convert"
	},
  	"engines": {
		"node": ">=20",
		"vscode": "^1.90.0"
	},
	"packageManager": "bun@1.3.5",
	"devDependencies": {
    "@types/bun": "~1.3.5",
    "@types/node": "~20.19.27",
		"@vscode/vsce": "~3.7.1",
    "textmate-grammar-test": "~0.2.9"
	}
}
