{
	"scopeName": "source.bait",
	"fileTypes": [
		".bait"
	],
	"patterns": [
		{ "include": "#comments" },
		{ "include": "#functions" },
		{ "include": "#keywords" },
		{ "include": "#numbers" },
		{ "include": "#strings" },
		{ "include": "#types" }
	],
	"repository": {
		"comments": {
			"name": "comment",
			"begin": "//",
			"end": "$"
		},
		"functions": {
			"name": "entity.name.function",
			"match": "\\b[a-z][a-z0-9_]*\\b\\("
		},
		"keywords": {
			"patterns": [
				{
					"name": "keyword",
					"match": "\\b(assert|const|false|fun|import|package|struct|true)\\b"
				},
				{
					"name": "keyword.control",
					"match": "\\b(and|else|for|if|or|return)\\b"
				}
			]
		},
		"numbers": {
			"name": "constant.numeric",
			"match": "-?\\d+"
		},
		"strings": {
			"patterns": [
				{
					"name": "string",
					"begin": "'",
					"end": "'"
				},
				{
					"name": "string.byte",
					"begin": "`",
					"end": "`"
				}
			]
		},
		"types": {
			"name": "entity.name.type",
			"match": "\\b(bool|byte|i(8|16|32|64)|string)\\b"
		}
	}
}
