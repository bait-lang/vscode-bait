{
	"scopeName": "source.bait",
	"fileTypes": [
		".bait"
	],
	"patterns": [
		{ "include": "#keywords" },
		{ "include": "#strings" },
		{ "include": "#types" },
		{
			"name": "comment",
			"begin": "//",
			"end": "$"
		}
	],
	"repository": {
		"keywords": {
			"patterns": [
				{
					"name": "keyword",
					"match": "\\b(assert|const|false|fun|import|package|struct|true)\\b"
				},
				{
					"name": "keyword.control",
					"match": "\\b(and|else|for|if|or)\\b"
				}
			]
		},
		"strings": {
			"patterns": [
				{
					"name": "string",
					"begin": "'",
					"end": "'"
				},
				{
					"name": "string.byte",
					"begin": "`",
					"end": "`"
				}
			]
		},
		"types": {
			"patterns": [
				{
					"name": "entity.name.type",
					"match": "\\b(bool|byte|i(8|16|32|64)|string)\\b"
				}
			]
		}
	}
}
